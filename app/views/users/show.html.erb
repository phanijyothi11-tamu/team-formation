<% content_for :title, "Forms" %>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
    <%= value %>
  </div>
<% end %>
<h2>Howdy</h2>
<div id="user-details">
  <p>
    <strong>Email:</strong>
    <%= @current_user.email %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @current_user.name %>
  </p>
  
</div>
<%= link_to "Logout", logout_path %>